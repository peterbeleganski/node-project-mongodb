<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">
    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/add" class="btn btn-info btn-sm">Add Note</a>
        <a href="/profile" class="btn btn-primary btn-sm">Profile</a>
        <a href="/stats" class="btn btn-default btn-sm">View Account Stats</a>
        <a href="/notes" class="btn btn-default btn-sm">My notes</a>
        <a href="/allnotes" class="btn btn-warning btn-sm">View All users notes</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>

    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>
                    
                    <form action="/delete/user/<%= user._id %>" method="post" enctype='application/x-www-form-urlencoded'>
                        <input type='hidden' value="<%= user._id%>" name='id' />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button> 
                    </form>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
    </div>
</div>
</body>
</html>
