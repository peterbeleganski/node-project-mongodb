<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">
    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Edit note <strong><%= note.title %><strong></h1>
        <a href="/add" class="btn btn-info btn-sm">Add Note</a>
        <a href="/profile" class="btn btn-default btn-sm">Profile</a>
        <a href="/notes" class="btn btn-default btn-sm">My notes</a>
        <a href="/allnotes" class="btn btn-default btn-sm">View All users notes</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    <% if(message) {%>
        <h2><%= message %></h2>
    <% } %>
    <div class="row">
            <div class="col-md-12">
                <div class="jumbotron">
                    <form action="/edit" method="post" class="form">
                    <div class="form-group">
                        <p>Title</p>
                        <input type="text" class="form-control" name="title" value="<%= note.title %>">
                        <input type="hidden" name="id" value="<%= note._id %>">
                        <br />
                        <p>Date</p>
                        <input type="date" class="form-control" name="dateCreated" value="<%= note.dateCreated %>">
                    </div>
                    <button type="submit" class="btn btn-success btn-lg">Edit note</button>
                </form>
                </div>
            </div>
        </div>
</div>
</body>
</html>
