<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">
    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Notes Page</h1>
        <a href="/add" class="btn btn-info btn-sm">Add Note</a>
        <a href="/profile" class="btn btn-primary btn-sm">Profile</a>
        <a href="/stats" class="btn btn-default btn-sm">View Account Stats</a>
        <a href="/notes" class="btn btn-default btn-sm">My notes</a>
        <a href="/allnotes" class="btn btn-warning btn-sm">View All users notes</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    
    <div class="row">
        <% for(var i = 0; i < notes.length; i++){ %>
        <div class="col-md-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <% if(notes[i].dateCreated) { %>
                        Date: <%=notes[i].dateCreated.toLocaleDateString() %>
                    <% }else { %>
                        Date: no date
                    <% } %>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                            <strong>Title:  <%= notes[i].title %>  </strong>
                        </div>
                        <div class="col-md-4">
                             <form action="/delete/<%= notes[i]._id %>" method="post" enctype='application/x-www-form-urlencoded'>
                                <input type='hidden' value="<%= notes[i]._id%>" name='id' />
                                <button type="submit" class="btn btn-xs btn-danger">Delete</button> 
                            </form>
                        </div>
                        <div class="col-md-4">
                            <form action="/update/<%= notes[i]._id %>" method="get" enctype='application/x-www-form-urlencoded'>
                                <input type='hidden' value="<%= notes[i]._id%>" name='id' />
                                <button type="submit" class="btn btn-xs btn-warning">Update</button> 
                            </form>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
        <% } %>
    </div>

</div>
</body>
</html>
